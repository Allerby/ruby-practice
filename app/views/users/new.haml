- provide(:title, 'Sign up')
%h1 Sign up

.row
  .col-md-6.col-md-offset-3
    = form_for(@user, html: {id: 'register-user'}) do |f|
      = render 'shared/error_messages'

      .form-group
        = f.label :name, class: 'form-control-label'
        = f.text_field :name, class: 'form-control'

      .form-group
        = f.label :email, class: 'form-control-label'
        = f.email_field :email, class: 'form-control'

      .form-group
        = f.label :password, class: 'form-control-label'
        = f.password_field :password, class: 'form-control'

      .form-group
        = f.label :password_confirmation, 'Confirmation', class: 'form-control-label'
        = f.password_field :password_confirmation, class: 'form-control'

      .input-group
        = f.submit " Create my account", class: "btn btn-primary"
