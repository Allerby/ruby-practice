<p id="notice"><%= notice %></p>

<h1>Listing Stories</h1>

<%= link_to 'New Story', new_story_path %>

<div class="row">
  <% @stories.each do |story| %>
     <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4">
       <div class="thumbnail">
        <%= image_tag(story.feature_image_url, :alt => "feature image") %>
        <div class="caption">
          <h3><%= story.title %></h3>
          <p><%= story.description %></p>
          <p><%= link_to 'Read more..', story_path(story) %></p>
        </div>
      </div>
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span></button>
        <ul class="dropdown-menu">
          <li></li>
          <li><%= link_to 'Edit', edit_story_path(story) %></li>
          <li><%= link_to 'Destroy', story_path(story),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
          </li>
        </div>
      </ul>
    </div>
  <% end %>

</div>
